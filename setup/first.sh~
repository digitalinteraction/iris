#!/bin/bash
sudo apt-get -y update
sudo apt-get -y upgrade
sudo rpi-update
sudo apt-get -y install screen
sudo raspi-config --expand-rootfs
sudo sh -c "echo "gpu_mem=384" >> /boot/config.txt"
sudo sh -c "echo "gpu_mem=384" >> /boot/config.txt"
sudo sh -c "echo "start_x=1" >> /boot/config.txt"
sudo reboot
